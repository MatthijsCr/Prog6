@model BeestjeOpEenFeestje.ViewModels.CreateAnimalModel

<h2>Gebruiker aanmaken</h2>

<form asp-action="CreateUser" method="post">
    <div>
        <label asp-for="Name">Naam</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Type">Type</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Price">E-mail</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <input hidden asp-for="ImageURL" />
    <div class="dropdown">
        <button type="button">Select an Image</button>
        <div class="dropdown-content">
            @foreach (string path in ViewBag.ImageUrls)
            {
                <img src="@path" alt="Dierenplaatje" onclick="selectImage('@path')">
            }
        </div>
    </div>
    <input type="hidden" name="selectedImage" id="selectedImage">
    <button type="submit">Submit</button>
    <button type="submit" class="btn btn-primary">Aanmaken</button>
</form>

@section Scripts {
    <script>
        function selectImage(imagePath) {
            document.getElementById('ImageURL').value = imagePath;
        }
    </script>
}