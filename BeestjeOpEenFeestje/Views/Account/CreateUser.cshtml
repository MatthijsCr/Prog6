@model BeestjeOpEenFeestje.ViewModels.CreateUserModel

<h2>Gebruiker aanmaken</h2>

<form asp-action="CreateUser" method="post">
    <div>
        <label asp-for="Username">Naam</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CustomerCard">Klantenkaart</label>
        <select asp-for="CustomerCard" class="form-control">
            @foreach (var cardType in Enum.GetValues(typeof(BeestjeOpEenFeestje.Models.CustomerCardType)))
            {
                <option value="@cardType">
                    @cardType.ToString()
                </option>
            }
        </select>
        <span asp-validation-for="CustomerCard" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Address">Adres</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="PhoneNumber">Telefoonnummer</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role" class="control-label">Rol</label>
        <select asp-for="Role" class="form-control">
            <option value="">Selecteer een rol</option>
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role">
                    @role.ToString()
                </option>
            }
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Aanmaken</button>
</form>